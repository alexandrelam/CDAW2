<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.1.xsd">
	<context:annotation-config />
	<bean id="simpleBean" class="springtp.SimpleBean" />
	<bean id="monBean" class="springtp.SimpleBeanInjection">
		<property name="simpleBean" ref="simpleBean" />
	</bean>

	<bean id="temperatureServiceBean"
		class="springtp.temperatureServiceBeanImpl" />

	<bean id="frBean" class="springtp.TemperatureBeanImpl">
		<property name="service" ref="temperatureServiceBean" />
		<property name="name" ref="frBean" />
	</bean>
	
	<bean id="enBean" class="springtp.TemperatureBeanImpl">
		<property name="service" ref="temperatureServiceBean" />
		<property name="name" ref="enBean" />
	</bean>
	
	<bean id="deBean" class="springtp.TemperatureBeanImpl">
		<property name="service" ref="temperatureServiceBean" />
		<property name="name" ref="deBean" />
	</bean>
	
	<context:component-scan base-package="springtp" />
	<!-- Les beans n’ont plus besoin d’être declares -->
</beans>